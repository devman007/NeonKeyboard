<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="5dp">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/themeIv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_85sdp"
        android:minHeight="@dimen/_85sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/theme8"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/themeIvLayer2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/themeIv"
        app:layout_constraintStart_toStartOf="@+id/themeIv"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/fullkeysbg" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/themeSelectedIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/themeIv"
        app:layout_constraintEnd_toEndOf="@+id/themeIv"
        app:layout_constraintStart_toStartOf="@+id/themeIv"
        app:layout_constraintTop_toTopOf="@+id/themeIv"
        app:srcCompat="@drawable/ic_theme_selected" />


</androidx.constraintlayout.widget.ConstraintLayout>